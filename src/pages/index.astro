<style>
.wrapper {
	padding-top: 5rem !important;
	padding-bottom: 5rem !important;
}

/* Landing section */
.landing {
	overflow: hidden;
}
.landing > .wrapper {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: space-between;
	padding: 5rem 2rem;
}
.landing .title {
	margin-bottom: 2rem;
}
.landing .image {
	max-width: 40rem;
	margin-bottom: -5rem;
	flex-grow: 1;
	min-width: 20rem;
	align-self: flex-end;
	position: relative;
}
.image-attribution {
	right: 50%;
	transform: translateX(50%);
	bottom: 0.5rem;
	color: rgba(0, 0, 0, 0.3);
	font-size: 0.8rem;
	position: absolute;
}
@media screen and (max-width: 25rem) {
	.landing .image {
		min-width: 0;
	}
}
.landing .image img {
	display: block;
}
.landing h1 {
	color: white;
	font-size: 3rem;
	max-width: 30rem;
	flex-grow: 1;
	margin-bottom: 1rem;
	line-height: 120%;
}
.landing h2 {
	color: #648195;
	font-size: 1.5rem;
	margin-top: 0;
	font-family: var(--font-family-body);
}

.grid-parent {
	position: relative;
}
.grid {
	background: var(--color-dark);
	background-image: linear-gradient(rgba(255, 255, 255, .1) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, .1) 1px, transparent 1px);
	background-size: 1em 1em;
	transform: skewX(-10deg) scaleX(2);
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	z-index: -1;
}
.grid::after {
	content: " ";
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	background: linear-gradient(transparent 0%, rgb(3, 16, 26) 100%);
	z-index: -1;
}

/* Section after landing */
.dark-divider {
	background: var(--color-dark);
	padding: 2rem;
	margin-top: -1px;
}

/* About section */
.horizontal-columns {
	height: 5rem;
	background-image: url("/horizontal-columns.svg");
	background-repeat: repeat-x;
	background-size: auto 5rem;
}
.horizontal-columns.inverted {
	transform: scaleY(-1);
	opacity: 0.5;
}

/* Features section */
.features {
	padding: 5rem 2rem;
}
.features h2 {
	font-size: 5rem;
	text-align: center;
	margin-top: 0;
	padding-top: 2rem;
}
.feature {
	display: flex;
	align-items: flex-start;
	justify-content: center;
	margin: 3rem 0;
	flex-wrap: wrap;
}
.feature .text {
	width: 30rem;
	padding: 2rem;
}
.feature .text h3 {
	font-size: 2rem;
	margin-top: 0;
	margin-bottom: 0;
}
.feature .image {
	flex-grow: 1;
	max-width: 30rem;
	border: 1px solid var(--color-primary);
	border-radius: 1rem;
	overflow: hidden;
}
.feature .image img {
	width: 100%;
}
.feature:nth-child(even) {
	flex-direction: row-reverse;
}

/* Upcoming features */
.upcoming {
	background-color: var(--color-dark);
	background-image: linear-gradient(transparent 0%, rgb(3, 16, 26) 100%);
	color: white
}

</style>